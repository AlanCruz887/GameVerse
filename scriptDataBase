-- CREAR LA BASE DE DATOS
CREATE DATABASE GAMEVERSE;

-- USAR LA BASE DE DATOS
USE GAMEVERSE;

-- CREAR LA TABLA DE USUARIOS
CREATE TABLE USUARIOS (
    IDUSUARIO INT PRIMARY KEY,
    NOMBREUSUARIO VARCHAR(50) NOT NULL,
    EMAIL VARCHAR(100) NOT NULL,
    CONTRASEÃ‘A VARCHAR(50) NOT NULL,
    FECHAREGISTRO DATE,
    IDCARRITO INT
);

-- CREAR LA TABLA DE JUEGOS
CREATE TABLE JUEGOS (
    IDJUEGO INT PRIMARY KEY,
    TITULO VARCHAR(100) NOT NULL,
    DESCRIPCION VARCHAR(MAX),
    PRECIO DECIMAL(10, 2) NOT NULL,
    FECHALANZAMIENTO DATE,
    GENERO VARCHAR(50),
    PLATAFORMA VARCHAR(50),
    EDITOR VARCHAR(100),
    IMAGEN VARCHAR(100)
);

-- CREAR LA TABLA DE CARRITOS DE COMPRAS
CREATE TABLE CARRITOS (
    IDCARRITO INT PRIMARY KEY,
    IDUSUARIO INT,
    FECHACREACION DATETIME,
    FOREIGN KEY (IDUSUARIO) REFERENCES USUARIOS(IDUSUARIO)
);

-- CREAR LA TABLA DE ELEMENTOS DE CARRITO
CREATE TABLE ELEMENTOSCARRITO (
    IDELEMENTOCARRITO INT PRIMARY KEY,
    IDCARRITO INT,
    IDJUEGO INT,
    CANTIDAD INT,
    FOREIGN KEY (IDCARRITO) REFERENCES CARRITOS(IDCARRITO),
    FOREIGN KEY (IDJUEGO) REFERENCES JUEGOS(IDJUEGO)
);
